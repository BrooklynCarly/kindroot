# Backend Configuration
DEBUG=True
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Google Sheets API Configuration
# Create a service account and download the JSON key file from Google Cloud Console
GOOGLE_SHEETS_CREDENTIALS=path/to/your/credentials.json
# The ID of your Google Sheet (found in the URL)
GOOGLE_SHEET_ID=your-sheet-id-here

# Security
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-here

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
